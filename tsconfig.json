{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["aibos-hybrid-windows/src/*"],
      "@/components/*": ["aibos-hybrid-windows/src/components/*"],
      "@/services/*": ["aibos-hybrid-windows/src/services/*"],
      "@/utils/*": ["aibos-hybrid-windows/src/utils/*"],
      "@/types/*": ["aibos-hybrid-windows/src/types/*"],
      "@/store/*": ["aibos-hybrid-windows/src/store/*"]
    }
  },
  "include": [
    "aibos-hybrid-windows/**/*.ts",
    "aibos-hybrid-windows/**/*.tsx",
    "aibos-hybrid-windows/**/*.js",
    "aibos-hybrid-windows/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./aibos-hybrid-windows" }
  ]
} 